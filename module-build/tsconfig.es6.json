{
  "compilerOptions": {
    "module": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": [],                /* to prevent inclusion of node types etc, amongst others - sub modules need to specify types they require */
    "lib": [
      "ES2017",
      "dom"
    ],
  }
}
